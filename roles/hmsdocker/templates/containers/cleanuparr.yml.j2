services:
  cleanuparr:
    image: ghcr.io/cleanuparr/cleanuparr:latest
    container_name: cleanuparr
    restart: ${RESTART_POLICY}
    {% if 'cleanuparr' in expose_ports_enabled_containers %}
    ports:
      - "11011:11011"
    {% endif %}
    networks:
      - proxy_net
    volumes:
      - ${HMSD_APPS_PATH}/cleanuparr/config:/config
    environment:
      - PORT=11011
      - BASE_PATH=
      - PUID=${PUID}
      - PGID=${PGID}
      - UMASK=022
      - TZ=${TIMEZONE}
    {% if 'cleanuparr' in traefik_enabled_containers %}
    labels:
      - traefik.enable=true
      - traefik.http.services.cleanuparr-${COMPOSE_PROJECT}.loadbalancer.server.port=11011
      - traefik.http.routers.cleanuparr-${COMPOSE_PROJECT}.rule=Host(`{{ hms_docker_container_map['cleanuparr']['proxy_host_rule'] | default('cleanuparr') }}.${HMSD_DOMAIN}`)
      - traefik.http.routers.cleanuparr-${COMPOSE_PROJECT}.middlewares={{ 'external' if 'cleanuparr' in expose_public_enabled_containers else 'internal' }}-{{ 'secured' if traefik_security_hardening else 'ipallowlist' }}@file{{ ',authentik-proxy-${COMPOSE_PROJECT}-cleanuparr-midware@docker' if 'cleanuparr' in authentik_enabled_containers }}
    {% endif %}
    # Health check configuration
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:11011/health"]
      interval: 30s        # Check every 30 seconds
      timeout: 10s         # Allow up to 10 seconds for response
      start_period: 30s    # Wait 30 seconds before first check
      retries: 3           # Mark unhealthy after 3 consecutive failures
