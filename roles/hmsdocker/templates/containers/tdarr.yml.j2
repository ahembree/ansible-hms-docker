services:
  tdarr:
    container_name: tdarr
    image: ghcr.io/haveagitgat/tdarr:latest
    {% if enable_intel_gpu %}
    devices:
      - /dev/dri:/dev/dri
    {% endif %}
    restart: ${RESTART_POLICY}
    logging:
      options:
        max-size: "12m"
        max-file: "5"
      driver: json-file
    networks:
      - proxy_net
    {% if 'tdarr' in expose_ports_enabled_containers %}
    ports:
      - 8265:8265 # webUI port
      - 8266:8266 # server port
      #- 8267:8267 # Internal node port
      #- 8268:8268 # Example extra node port
    {% elif tdarr_enable_node_server %}
    ports:
      - 8266:8266
    {% endif %}
    environment:
      - PUID=${PUID}
      - PGID=${PGID}
      - TZ=${TIMEZONE}
      - UMASK_SET=002
      - serverIP=0.0.0.0
      - serverPort=8266
      - webUIPort=8265
      - internalNode=true
      - nodeName=MyInternalNode
    {% if enable_nvidia_gpu %}
      - NVIDIA_VISIBLE_DEVICES=all
      - NVIDIA_DRIVER_CAPABILITIES=all
    runtime: nvidia
    {% endif %}
    {% if 'tdarr' in traefik_enabled_containers or 'tdarr' in homepage_enabled_containers %}
    labels:
      {% if 'tdarr' in traefik_enabled_containers %}
      - traefik.enable=true
      - traefik.http.services.tdarr-${COMPOSE_PROJECT}.loadbalancer.server.port=8265
      - traefik.http.routers.tdarr-${COMPOSE_PROJECT}.rule=Host(`{{ hms_docker_container_map['tdarr']['proxy_host_rule'] | default('tdarr') }}.${HMSD_DOMAIN}`)
      - traefik.http.routers.tdarr-${COMPOSE_PROJECT}.middlewares={{ 'external' if 'tdarr' in expose_public_enabled_containers else 'internal' }}-{{ 'secured' if traefik_security_hardening else 'ipallowlist' }}@file{{ ',authentik-proxy-${COMPOSE_PROJECT}-tdarr-midware@docker' if 'tdarr' in authentik_enabled_containers }}
      {% endif %}
      {% if 'tdarr' in homepage_enabled_containers %}
      - homepage.group=Media
      - homepage.name=Tdarr
      - homepage.icon=tdarr.png
      - homepage.href=http://{{ hms_docker_container_map['tdarr']['proxy_host_rule'] | default('tdarr') }}.${HMSD_DOMAIN}
      - homepage.description=Media Transcoder
      - homepage.widget.type=tdarr
      - homepage.widget.url=http://tdarr:8265
      {% if 'tdarr' in homepage_stats_enabled_containers %}
      - homepage.showStats=true
      {% endif %}
      {% endif %}
    {% endif %}
    volumes:
      - ${HMSD_APPS_PATH}/tdarr/config/server:/app/server
      - ${HMSD_APPS_PATH}/tdarr/config/app:/app/configs
      - ${HMSD_APPS_PATH}/tdarr/config/logs:/app/logs
      - {{ hmsdocker_transcode_temp_path }}/tdarr:/temp_transcode
      - ${HMSD_MOUNT_PATH}:/data
    healthcheck:
      test: curl -f http://localhost:8265 || exit 1
      interval: 5s
      timeout: 2s
      retries: 3
      start_period: 30s
