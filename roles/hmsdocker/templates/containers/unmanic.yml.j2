services:
  unmanic:
    image: josh5/unmanic:latest
    container_name: unmanic
    restart: ${RESTART_POLICY}
    logging:
      options:
        max-size: "12m"
        max-file: "5"
      driver: json-file
    {% if enable_intel_gpu %}
    devices:
      - "/dev/dri:/dev/dri"
    {% endif %}
    {% if 'unmanic' in expose_ports_enabled_containers %}
    ports:
      - 8889:8888
    {% endif %}
    networks:
      - proxy_net
    environment:
      - PUID=${PUID}
      - PGID=${PGID}
      - TZ=${TIMEZONE}
    {% if enable_nvidia_gpu %}
      - NVIDIA_DRIVER_CAPABILITIES=compute,video,utility
      - NVIDIA_VISIBLE_DEVICES=all
    runtime: nvidia
    {% endif %}
    volumes:
      - ${HMSD_APPS_PATH}/unmanic/config:/config
      - ${HMSD_MOUNT_PATH}:/library
      - {{ hmsdocker_transcode_temp_path }}/unmanic:/tmp/unmanic
    {% if 'unmanic' in traefik_enabled_containers or 'unmanic' in homepage_enabled_containers %}
    labels:
      {% if 'unmanic' in traefik_enabled_containers %}
      - traefik.enable=true
      - traefik.http.services.unmanic-${COMPOSE_PROJECT}.loadbalancer.server.port=8888
      - traefik.http.routers.unmanic-${COMPOSE_PROJECT}.rule=Host(`{{ hms_docker_container_map['unmanic']['proxy_host_rule'] | default('unmanic') }}.${HMSD_DOMAIN}`)
      - traefik.http.routers.unmanic-${COMPOSE_PROJECT}.middlewares={{ 'external' if 'unmanic' in expose_public_enabled_containers else 'internal' }}-{{ 'secured' if traefik_security_hardening else 'ipallowlist' }}@file{{ ',authentik-proxy-${COMPOSE_PROJECT}-unmanic-midware@docker' if 'unmanic' in authentik_enabled_containers }}
      {% endif %}
      {% if 'unmanic' in homepage_enabled_containers %}
      - homepage.group=Media
      - homepage.name=unmanic
      - homepage.icon=unmanic.png
      - homepage.href=https://{{ hms_docker_container_map['unmanic']['proxy_host_rule'] | default('unmanic') }}.${HMSD_DOMAIN}
      - homepage.description=Media Transcoder
      - homepage.widget.type=unmanic
      - homepage.widget.url=http://unmanic:8888
        {% if 'unmanic' in homepage_stats_enabled_containers %}
      - homepage.showStats=true
        {% endif %}
      {% endif %}
    {% endif %}
    healthcheck:
      test: curl -f http://localhost:8888 || exit 1
      interval: 5s
      timeout: 2s
      retries: 3
      start_period: 30s
