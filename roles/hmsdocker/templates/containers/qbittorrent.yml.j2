services:
  qbittorrent:
    image: binhex/arch-qbittorrentvpn
    container_name: qbittorrent
    restart: ${RESTART_POLICY}
    logging:
      options:
        max-size: "12m"
        max-file: "5"
      driver: json-file
    networks:
      - download_net
      - proxy_net
    {% if hmsdocker_vpn_type == 'wireguard' %}
    privileged: true
    sysctls:
      - net.ipv4.conf.all.src_valid_mark=1
    {% else %}
    cap_add:
      - NET_ADMIN
    {% endif %}
    environment:
      - PUID=${PUID}
      - PGID=${PGID}
      - TZ=${TIMEZONE}
      - WEBUI_PORT=8086
      - VPN_ENABLED=yes
      - VPN_USER=${VPN_USER}
      - VPN_PASS=${VPN_PASS}
      - VPN_PROV=custom
      - VPN_CLIENT={{ hmsdocker_vpn_type }}
      - ENABLE_PRIVOXY=yes
      - LAN_NETWORK={{ hms_docker_network_subnet }}
    volumes:
      - ${HMSD_APPS_PATH}/qbittorrent/config:/config
      - ${HMSD_MOUNT_PATH}:/data
    {% if 'qbittorrent' in expose_ports_enabled_containers %}
    ports:
      - 8086:8086
      - 8118:8118 # privoxy
    {% endif %}
    {% if 'qbittorrent' in traefik_enabled_containers or 'qbittorrent' in homepage_enabled_containers %}
    labels:
      {% if 'qbittorrent' in traefik_enabled_containers %}
      - traefik.enable=true
      - traefik.http.services.qbittorrent-${COMPOSE_PROJECT}.loadbalancer.server.port=8086
      - traefik.http.routers.qbittorrent-${COMPOSE_PROJECT}.rule=Host(`{{ hms_docker_container_map['qbittorrent']['proxy_host_rule'] | default('qbittorrent') }}.${HMSD_DOMAIN}`)
      - traefik.http.routers.qbittorrent-${COMPOSE_PROJECT}.middlewares={{ 'external' if 'qbittorrent' in expose_public_enabled_containers else 'internal' }}-{{ 'secured' if traefik_security_hardening else 'ipallowlist' }}@file{{ ',authentik-proxy-${COMPOSE_PROJECT}-qbittorrent-midware@docker' if 'qbittorrent' in authentik_enabled_containers }}
      {% endif %}
      {% if 'qbittorrent' in homepage_enabled_containers %}
      - homepage.group=Downloads
      - homepage.name=qbittorrent
      - homepage.icon=qbittorrent.png
      - homepage.href=http://{{ hms_docker_container_map['qbittorrent']['proxy_host_rule'] | default('qbittorrent') }}.${HMSD_DOMAIN}
      - homepage.description=Torrent Management
      - homepage.widget.type=qbittorrent
      - homepage.widget.url=http://qbittorrent:8086
        {% if 'qbittorrent' in homepage_stats_enabled_containers %}
      - homepage.showStats=true
        {% endif %}
      {% endif %}
    {% endif %}
