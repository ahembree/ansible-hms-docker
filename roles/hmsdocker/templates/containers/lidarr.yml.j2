services:
  lidarr:
    image: lscr.io/linuxserver/lidarr:latest
    container_name: lidarr
    restart: ${RESTART_POLICY}
    networks:
      - proxy_net
      - download_net
    logging:
      options:
        max-size: "12m"
        max-file: "5"
      driver: json-file
    {% if 'lidarr' in expose_ports_enabled_containers %}
    ports:
      - 8686:8686
    {% endif %}
    volumes:
      - ${HMSD_APPS_PATH}/lidarr/config:/config
      - ${HMSD_MOUNT_PATH}:/data
    {% if hmsdocker_svc_misc_arr_scripts_enabled | default(false) %}
      - ${HMSD_APPS_PATH}/lidarr/custom-services.d:/custom-services.d
      - ${HMSD_APPS_PATH}/lidarr/custom-cont-init.d:/custom-cont-init.d
    {% endif %}
    environment:
      - PUID=${PUID}
      - PGID=${PGID}
      - TZ=${TIMEZONE}
    {% if 'lidarr' in traefik_enabled_containers or 'lidarr' in homepage_enabled_containers %}
    labels:
      {% if 'lidarr' in traefik_enabled_containers %}
      - traefik.enable=true
      - traefik.http.services.lidarr-${COMPOSE_PROJECT}.loadbalancer.server.port=8686
      - traefik.http.routers.lidarr-${COMPOSE_PROJECT}.rule=Host(`{{ hms_docker_container_map['lidarr']['proxy_host_rule'] | default('lidarr') }}.${HMSD_DOMAIN}`)
      - traefik.http.routers.lidarr-${COMPOSE_PROJECT}.middlewares={{ 'external' if 'lidarr' in expose_public_enabled_containers else 'internal' }}-{{ 'secured' if traefik_security_hardening else 'ipallowlist' }}@file{{ ',authentik-proxy-${COMPOSE_PROJECT}-lidarr-midware@docker' if 'lidarr' in authentik_enabled_containers }}
      {% endif %}
      {% if 'lidarr' in homepage_enabled_containers %}
      - homepage.group=Managers
      - homepage.name=Lidarr
      - homepage.icon=lidarr.png
      - homepage.href=http://{{ hms_docker_container_map['lidarr']['proxy_host_rule'] | default('lidarr') }}.${HMSD_DOMAIN}
      - homepage.description=Music Manager
      - homepage.widget.type=lidarr
      - homepage.widget.url=http://lidarr:8686
      - homepage.widget.key=${LIDARR_KEY:-apikeyapikeyapikey}
        {% if 'lidarr' in homepage_stats_enabled_containers %}
      - homepage.showStats=true
        {% endif %}
      {% endif %}
    {% endif %}
    healthcheck:
      test: curl -f http://localhost:8686/health || exit 1
      interval: 5s
      timeout: 2s
      retries: 3
      start_period: 30s
